<!-- Seller Login Form -->
<div class="auth-container">
    <div class="auth-box">
        <div class="auth-header">
            <h2><i class="fas fa-store me-2"></i>Seller Login</h2>
        </div>

        <form action="/auth/seller/login" method="POST">
            <div class="form-group">
                <label for="email">
                    <i class="fas fa-envelope me-2"></i>Business Email
                </label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">
                    <i class="fas fa-lock me-2"></i>Password
                </label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt me-2"></i>Login to Seller Dashboard
                </button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <p>Don't have a seller account? <a href="/auth/seller/register">Register your business</a></p>
        </div>

        <!-- Customer Section -->
        <div class="seller-section">
            <h3><i class="fas fa-shopping-bag me-2"></i>Are you a Customer?</h3>
            <p>Looking to shop? Head over to our customer section!</p>
            <div class="d-grid gap-2">
                <a href="/auth/login" class="btn btn-outline-primary">
                    <i class="fas fa-sign-in-alt me-2"></i>Customer Login
                </a>
                <a href="/auth/register" class="btn btn-outline-success">
                    <i class="fas fa-user-plus me-2"></i>Create Customer Account
                </a>
            </div>
        </div>
    </div>
</div>